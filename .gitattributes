# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Django files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Log files
*.log text eol=lf

# Environment files
.env text eol=lf
.env.* text eol=lf
